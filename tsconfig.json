{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "public",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",                  // ← 폴더만이 아니라 패턴으로
    "src/contracts/*.json"       // ← JSON을 확실히 포함
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "firebase-messaging-sw",
    "public"
  ],
}